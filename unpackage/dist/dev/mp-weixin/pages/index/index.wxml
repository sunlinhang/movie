<view class="page"><swiper class="swiperBox" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="sBoxImg" src="{{item.image}}" lazy-load data-event-opts="{{[['tap',[['goDetail',['$0'],[[['swiperList','',index,'movieId']]]]]]]}}" bindtap="__e"></image></swiper-item></block></swiper><view class="page_block super-hot"><view class="hot_head"><image class="hot_ico" src="../../static/icos/hot.png"></image><view class="hot_title">热门影片</view></view><scroll-view scroll-x="true"><view class="hotList"><block wx:for="{{moveHotList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="hot_body"><image class="hot_img" src="{{item.cover}}" lazy-load data-event-opts="{{[['tap',[['goDetail',['$0'],[[['moveHotList','',index,'id']]]]]]]}}" bindtap="__e"></image><view class="hot_name">{{item.name}}</view><hot-stars vue-id="{{'1-'+index}}" innerScore="{{item.score}}" showNum="1" bind:__l="__l"></hot-stars></view></block></view></scroll-view></view><view class="page_block super-hot"><view class="hot_head"><image class="hot_ico" src="../../static/icos/interest.png"></image><view class="hot_title">热门预告</view></view></view><view class="page_block hot_moves"><block wx:for="{{trailerList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><video class="trailer_video" id="{{item.id}}" data-playingIndex="{{item.id}}" src="{{item.trailer}}" poster="{{item.poster}}" controls data-event-opts="{{[['play',[['controlPlay',['$event']]]]]}}" bindplay="__e"></video></block></view><view class="page_block super-hot"><view class="hot_head"><image class="hot_ico" src="../../static/icos/interest.png"></image><view class="hot_title">猜你喜欢</view></view></view><view class="page_block u_like"><block wx:for="{{guessLikeList}}" wx:for-item="item" wx:for-index="gIndex" wx:key="id"><view class="like_movie"><image class="like_img" src="{{item.cover}}"></image><view class="movie_desc"><view class="movie_title">{{''+item.name+''}}</view><hot-stars vue-id="{{'2-'+gIndex}}" innerScore="{{item.score}}" showNum="1" bind:__l="__l"></hot-stars><view class="movie_info">{{''+item.basicInfo+''}}</view><view class="movie_info">{{''+item.releaseDate+''}}</view></view><view class="movie_oper" data-gIndex="{{gIndex}}" data-event-opts="{{[['tap',[['good',['$event']]]]]}}" bindtap="__e"><image class="praise_ico" src="../../static/icos/praise.png"></image><view class="praise">赞一下</view><view class="praise animation" animation="{{animationDataArr[gIndex]}}">+1</view></view></view></block></view></view>